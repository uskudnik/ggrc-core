{{log .}}
{{log related_request}}
{{#using instance=.}}
<li data-object-id="{{instance.id}}" data-object-type="{{instance.class.table_singular}}">
  {{#is_allowed "update" instance}}
  <span class="file-controls">
    <a href="javascript://" class="info-action unmap" data-toggle="unmap">
      <span class="result" {{data "result"}}></span>
      <i class="fa fa-ban"></i>
    </a>
  </span>
  {{/is_allowed}}
  <i class="fa fa-{{class.table_singular}} color"></i>
  {{firstnonempty title description name email}}

  {{#if instance.viewLink}}
    {{#is_allowed "view_object_page" instance}}
      <a class="more" href="{{instance.viewLink}}" target="_blank"><i class="fa fa-long-arrow-right"></i></a>
    {{/is_allowed}}
  {{/if}}
  {{#if reusable}}
    <input type="checkbox" />
  {{/if}}
</li>
{{/using}}
